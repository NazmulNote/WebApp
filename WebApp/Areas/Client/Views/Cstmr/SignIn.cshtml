@using WebApp
@model WebApp.Areas.Client.Models.ClientViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section" style="background:#a8cb6738">
    <div class="container" style="margin-top:4rem">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="bg-white p-30 rounded box-shadow">
                    <div class="text-center">
                        <h4><a asp-controller="Home" asp-action="Index"><img class="signLogo" src="@(string.IsNullOrEmpty(Model.CompanyInfo.PhotoUrl)?"Client/img/default/default.png":Url.Content(Model.CompanyInfo.PhotoUrl))" height="20" alt="logo"></a></h4>
                        <span class="alert-success">@ViewBag.success</span>
                        <span class="alert-danger">@ViewBag.error</span>
                        <span class="alert-success">@TempData["Success"]</span>
                        <div class="spacer-15"></div>
                    </div>
                    @using (Html.BeginForm("SignIn", "Cstmr", FormMethod.Post, new { id = "loginForm", @class = "login-form", enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(model => model.Customer.ID)
                        <div class="row">
                            <div class="col-lg-12 mt-2">
                                <label class="f-12">Email</label>
                                @Html.EditorFor(model => model.Customer.Email, new { htmlAttributes = new { @type = "mail", @id = "Email", @placeholder = "Enter Email..", @class = "form-control", @required = "require" } })
                            </div>

                            <div class="col-lg-12 mt-2">
                                <label class="">Password</label>
                                @Html.EditorFor(model => model.Customer.Password, new { htmlAttributes = new { @type = "Password", @id = "Password",@placeholder = "Enter Password.." ,@class = "form-control", @required = "require" } })
                            </div>

                            <div class="col-lg-12 mt-2">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">Remember me</label>
                                </div>
                            </div>
                            <div class="col-lg-12 mt-3 mb-4">
                                <button type="submit" class="btn btn-custom w-100">Sign in</button>
                            </div>
                            <div class="mx-auto">
                                <p class="mb-3 mt-2"><a href="#" class="text-dark font-weight-bold">Forgot your password ?</a></p>
                            </div>
                            <div class="mx-auto">
                                <p class="mb-0 mt-2"><small class="text-dark mr-2">Don't have an account ?</small> <a asp-controller="Cstmr" asp-action="SignUp" class="text-dark font-weight-bold">Sign Up</a></p>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</section>

