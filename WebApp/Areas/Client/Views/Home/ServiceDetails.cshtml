@model WebApp.Areas.Client.Models.ClientViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Service Detailt";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
	<div class="container">
		<div class="row" style="margin-top:5rem">
			<div class="col-md-6">
				<div class="single-service">
					<img src="@(string.IsNullOrEmpty(Model.Service.PhotoUrl)?"/Client/img/default/service.jpg":Url.Content(Model.Service.PhotoUrl))" class="img-fluid img-thumbnail" alt="single_service">
				</div>
			</div>
			<div class="col-lg-4 col-md-4">
				<h4 class="text-uppercase mt-30">@Model.Service.Name</h4>
				<span>Category : @Model.Service.ServiceCat</span>
				<p>@Model.Service.ShortDesc</p>
				<h4 class="mt-20" style="border-bottom:2px solid lightgray">Description:</h4>
				<div>
					@(string.IsNullOrEmpty(Model.Service.FullDesc) ? "Description...." : Html.Raw(Model.Service.FullDesc))
				</div>
			</div>
		</div>
	</div>
</section>
<section class="bg-light pt-4">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-8 col-md-12">
				<div class="section-title text-center">
					<h3>Explore More @Model.Service.ServiceCat Services</h3>
					<div class="spacer-15"></div>
					@if (string.IsNullOrEmpty(Model.SiteInfo.ServiceDetailsDesc))
					{
						<p class="text-muted mb-0">Discover other services related to your interests. We offer a wide range of solutions to meet your unique needs.</p>
					}
					else
					{
						<p class ="text-muted mb-0">@Model.SiteInfo.ServiceDetailsDesc</p>
					}
					<div class="spacer-30"></div>
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid">
		<div class="port portfolio-masonry mt-3">
			<div class="portfolioContainer row" style="position: relative; height: 734.224px;">
				@if (Model.ServiceList != null)
				{
					foreach (var service in Model.ServiceList)
					{
						<div class="col-lg-3 col-md-3 col-sm-6 col-12 @(service.ServiceCat)" style="position: absolute; left: 760px; top: 0px;">
							<div class="owl-services img-service bg-light">
								<div class="img">
									<img src="@(string.IsNullOrEmpty(service.PhotoUrl)?"../Client/img/default/service.jpg":service.PhotoUrl)" alt="service_img" class="img-fluid">
								</div>
								<div class="owl-service-head text-center">
									<h4>@(string.IsNullOrEmpty(service.Name) ? "Best Advisors" : service.Name)</h4>
									<p>@(string.IsNullOrEmpty(service.ShortDesc) ? "Best Advisors" : service.ShortDesc)</p>
									<div class="mt-3">
										<a asp-controller="Home" asp-action="ServiceDetails" asp-route-id="@service.ID" class="btn btn-outline-custom">Read More</a>
									</div>
								</div>
							</div>
						</div>
					}
				}
				else
				{
					<div class="col-lg-3 col-md-3 col-sm-6 col-12 account" style="position: absolute; left: 760px; top: 0px;">
						<div class="owl-services img-service bg-light">
							<div class="img">
								<img src="../Client/img/default/service.jpg" alt="service_img" class="img-fluid">
							</div>
							<div class="owl-service-head text-center">
								<a href="#"><h4>Best Advisors</h4></a>
								<p class="text-muted mb-0">I will give you a complete account of the system, and expound the actual teachings of the great explorer.</p>
								<div class="mt-3">
									<a class="btn btn-outline-custom">Read More</a>
								</div>
							</div>
						</div>
					</div>
				}

			</div>
		</div>

	</div>
</section>