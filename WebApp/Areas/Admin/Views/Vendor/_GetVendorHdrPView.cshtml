@model WebApp.Areas.Admin.Models.AdminViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using (Html.BeginForm("VendorSetUpdate", "Vendor", FormMethod.Post, new { id = "VendorSetUpdateForm", enctype = "multipart/form-data" }))
{
	@Html.HiddenFor(model => model.Vendor.ID)

	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-12">
			<div class="row">
				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.Name, "Name:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Vendor.Name, new { htmlAttributes = new { id = "Name", @class = "form-control", placeholder = "Enter Name", required = "required" } })
							@Html.ValidationMessageFor(model => model.Vendor.Name, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.ContactPerson, "C.Person:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Vendor.ContactPerson, new { htmlAttributes = new { id = "ContactPerson", @class = "form-control", placeholder = "Enter Contact Person" } })
							@Html.ValidationMessageFor(model => model.Vendor.ContactPerson, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.Phone, "Phone:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Vendor.Phone, new { htmlAttributes = new { id = "Phone", @class = "form-control", placeholder = "Enter Phone", required = "required" } })
							@Html.ValidationMessageFor(model => model.Vendor.Phone, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.Email, "Email:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Vendor.Email, new { htmlAttributes = new { Type="email",id = "Email", @class = "form-control", placeholder = "Enter Email", required = "required" } })
							@Html.ValidationMessageFor(model => model.Vendor.Email, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.CountryId, "Country:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.DropDownListFor(model => model.Vendor.CountryId, (IEnumerable<SelectListItem>)ViewBag.CountryList, "Select Country", new { @class = "form-control", @id = "CountryId", required = "required" })
							@Html.ValidationMessageFor(model => model.Vendor.CountryId, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.DistrictId, "District:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.DropDownListFor(model => model.Vendor.DistrictId, (IEnumerable<SelectListItem>)ViewBag.DistrictList, "Select District", new { @class = "form-control", @id = "DistrictId", required = "required" })
							@Html.ValidationMessageFor(model => model.Vendor.DistrictId, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.PoliceStationId, "P.Station:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.DropDownListFor(model => model.Vendor.PoliceStationId, (IEnumerable<SelectListItem>)ViewBag.PoliceStationList, "Select Police Station", new { @class = "form-control", @id = "PoliceStationId", required = "required" })
							@Html.ValidationMessageFor(model => model.Vendor.PoliceStationId, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>  
				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.Address, "Address:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.TextAreaFor(model => model.Vendor.Address, new { @id = "Address", @class = "form-control", placeholder = "Enter Address", required = "required", rows = "2" })
							@Html.ValidationMessageFor(model => model.Vendor.Address, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Vendor.TIN, "TIN:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Vendor.TIN, new { htmlAttributes = new { id = "TIN", @class = "form-control", placeholder = "Enter TIN", required = "required" } })
							@Html.ValidationMessageFor(model => model.Vendor.TIN, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row ml-2">
						<label class="form-check-label">
							@Html.CheckBoxFor(model => model.Vendor.IsActive, new { @class = "form-check-input" }) Is Active
						</label>
					</div>
				</div>
				<div class="col-lg-6 col-md-6 col-sm-6 col-12 mb-1 form-check" style="text-align:right">
					<button type="button" class="btn btn-sm btn-primary btn-user" onclick="VendorSetUpdate()">
						Save
					</button>
					<a class="btn btn-sm btn-outline-primary" asp-controller="Vendor" asp-action="VendorCreate">Refresh</a>
				</div>
			</div>
		</div>


	</div>

}
<script type="text/javascript">
	document.getElementById("Name").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };
	document.getElementById("ContactPerson").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };
	document.getElementById("Phone").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };
	document.getElementById("Email").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };
	document.getElementById("CountryId").onchange = function () { this.style.border = "0.5px solid #dee2e6";GetDistrictByCountryId(); };
	document.getElementById("DistrictId").onchange = function () { this.style.border = "0.5px solid #dee2e6";GetPoliceStationByDistrictId() };
	document.getElementById("PoliceStationId").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };
	document.getElementById("Address").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };

	function GetDistrictByCountryId(){
		var CountryId = document.getElementById("CountryId").value;
		$.ajax({
			url: '@Url.Action("GetDistrictByCountryId", "Vendor")',
			type: 'GET',
			data: { ID: CountryId },
			success: function (district) {

				var districtDropdown = $('#DistrictId');
				districtDropdown.empty();
				districtDropdown.append($('<option>').text('Select District').attr('value', ''));
				$.each(district, function (index, item) {
					districtDropdown.append($('<option>', {value: item.value,text: item.text}));
					// subCatDropdown.append($('<option>').text(item.Text).attr('value', item.Value));
				});
			},
			error: function (error) {
				if (error.status === 401) location.href = '/SPanel1325/Login';
				console.log('Error fetching District');
			}
		});
	}
	function GetPoliceStationByDistrictId(){
		var DistrictId = document.getElementById("DistrictId").value;
		$.ajax({
			url: '@Url.Action("GetPoliceStationByDistrictId", "Vendor")',
			type: 'GET',
			data: { ID: DistrictId },
			success: function (policeStation) {

				var policeStationDropdown = $('#PoliceStationId');
				policeStationDropdown.empty();
				policeStationDropdown.append($('<option>').text('Select Police Station').attr('value', ''));
				$.each(policeStation, function (index, item) {
					policeStationDropdown.append($('<option>', {value: item.value,text: item.text}));
					// subCatDropdown.append($('<option>').text(item.Text).attr('value', item.Value));
				});
			},
			error: function (error) {
				if (error.status === 401) location.href = '/SPanel1325/Login';
				console.log('Error fetching Police Station');
			}
		});
	}
</script>
