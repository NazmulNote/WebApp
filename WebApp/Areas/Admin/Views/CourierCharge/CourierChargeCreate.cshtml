@model WebApp.Areas.Admin.Models.AdminViewModel;
@{
	ViewData["Title"] = "Courier Charge Create";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="PgTitle">Courier Charge:</h5>
<h5 class="alert-success">@ViewBag.Success</h5>
<h5 class="alert-danger">@ViewBag.Error</h5>
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body" id="HdrPView">
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body" id="DetPView">
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	   document.addEventListener('DOMContentLoaded',function(){
		   GetHdrPView();
	   })
	let descriptionEditor, specificationEditor;
	function GetHdrPView(ID) {
		Swal.fire({
			position: "center",
			html: '<i class="fa fa-spinner fa-spin" style="font-size: 2em;margin-top: 0.8em"></i><br><br>',
			showConfirmButton: false,
			allowOutsideClick: false,
			allowEscapeKey: false,
		});
		$.ajax({
			url: '@Url.Action("GetCourierChargeHdrPView", "CourierCharge")',
			type: 'GET',
			data: { ID: ID },
			success: function (html) {
				 $("#HdrPView").html("");
				 $("#HdrPView").html(html);
				 GetDetPView();
			},
			error: function (error) {
				if (error.status === 401) location.href = '/SPanel1325/Login';
				console.log("Error Get CourierCharge Hdr PView");
				Swal.close();
			}
		});
	}
	function GetDetPView() {
		Swal.fire({
			position: "center",
			html: '<i class="fa fa-spinner fa-spin" style="font-size: 2em;margin-top: 0.8em"></i><br><br>',
			showConfirmButton: false,
			allowOutsideClick: false,
			allowEscapeKey: false,
		});
		$.ajax({
			url: '@Url.Action("GetCourierChargeDetPView", "CourierCharge")',
			type: 'GET',
			success: function (html) {
				 $("#DetPView").html("");
				 $("#DetPView").html(html);
				 Swal.close();
			},
			error: function (error) {
				if (error.status === 401) location.href = '/SPanel1325/Login';
				console.log("Error Get CourierCharge det PView");
				Swal.close();
			}
		});
	}
	function CourierChargeSetUpdate() {

		var formData = new FormData();

		var otherData = $('#CourierChargeSetUpdateForm').serializeArray();
		$.each(otherData, function (index, item) {
			formData.append(item.name, item.value);
		});
		var IsRequired = CheckRequiredField();
		if (IsRequired == "NO") {
			Swal.fire({
				position: "center",
				html: '<i class="fa fa-spinner fa-spin" style="font-size: 2em;margin-top: 0.8em"></i><br><br>',
				showConfirmButton: false,
				allowOutsideClick: false,
				allowEscapeKey: false,
			});
			$.ajax({
				url: '@Url.Action("CourierChargeSetUpdate", "CourierCharge")',
				type: 'POST',
				data: formData,
				contentType: false, // Important for FormData
				processData: false, // Important for FormData
				success: function (result) {
					Swal.close();
					if (result == 0) {
						Swal.fire({
							position: "center",
							icon: "error",
							title: "Courier Charge Not Inserted successfully.",
							showConfirmButton: false,
							timer: 2000
						});
					}else if(result ==-1){
						Swal.fire({
							position: "center",
							icon: "error",
							title: "This Courier Charge Location already exists in the database.",
							showConfirmButton: false,
							timer: 2000
						});
					}
					else {
						Swal.fire({
							position: "center",
							icon: "success",
							title: "Courier Charge Inserted successfully!",
							showConfirmButton: false,
							timer: 2000
						});
						setTimeout(function () {
							GetDetPView();
							GetHdrPView();
						}, 2000)
					}
				},
				error: function (error) {
					if (error.status === 401) location.href = '/SPanel1325/Login';
					console.log(error);
					Swal.close();
				}
			});
		}
	}
	function CheckRequiredField() {
		var Location = document.getElementById("Location");
		var ChargeAmount = document.getElementById("ChargeAmount");
		var EstimatedDays = document.getElementById("EstimatedDays");

		if (Location.value == "" || ChargeAmount.value == 0|| EstimatedDays.value ==0) {
			if (Location.value == "") { Location.style.border = "0.5px solid #ff00005c"; }
			if (ChargeAmount.value == 0) { ChargeAmount.style.border = "0.5px solid #ff00005c"; }
			if (EstimatedDays.value == 0) { EstimatedDays.style.border = "0.5px solid #ff00005c"; }
			
			Swal.fire({
				position: "center",
				icon: "error",
				title: "Please fill up all required fields.",
				showConfirmButton: false,
				timer: 2000
			});
			return "YES";
		} else {
			return "NO"
		}
	}
</script>



