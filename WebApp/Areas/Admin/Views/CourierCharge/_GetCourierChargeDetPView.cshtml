@model WebApp.Areas.Admin.Models.AdminViewModel;

<div class="contentSticky">
	<div class="table-sticky Content_cScroll" style="height:51vh">
		<table class="table table-bordered table-striped table-hover">
			<thead>
				<tr class="sticky">
					<th>SL</th>
					<th>Location</th>
					<th>Charge Amount</th>
					<th>Estimated Days</th>
					<th>IsActive</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@{
					int i = 1;
				}
				@foreach (var courierCharge in Model.CourierChargeList)
				{
					<tr>
						<td class="text-center">@i</td>
						<td>@courierCharge.Location</td>
						<td>@courierCharge.ChargeAmount</td>
						<td>@courierCharge.EstimatedDays</td>
						<td class="text-center" style="color:@(courierCharge.IsActive ? "green" : "red")">
							@courierCharge.IsActive
						</td>
						<td class="text-center"><button class="btn btn-sm btn-primary" onclick="GetHdrPView(@courierCharge.ID)">View</button></td>
					</tr>
					i++;
				}
			</tbody>
		</table>
	</div>
</div>