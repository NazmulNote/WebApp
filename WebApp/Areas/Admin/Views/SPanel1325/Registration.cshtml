@using WebApp
@model WebApp.Areas.Admin.Models.AdminViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<div class="row" style="justify-content:center">
    <div class="col-lg-6">
        <div class="card o-hidden border-0 shadow-lg my-4">
            <div class="card-body p-0">
                <div class="p-3">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        <h5 class="alert-success">@ViewBag.Success</h5>
                        <h5 class="alert-danger">@ViewBag.Error</h5>
                    </div>
                    @using (Html.BeginForm("Registration", "SPanel1325", FormMethod.Post, new { id = "AdminUserForm", enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(model => model.AdminUser.ID)

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.TextBoxFor(model => model.AdminUser.Name, new { @class = "form-control form-control-user", @placeholder = "Name", @required = "required", @type = "text" })
                                @Html.ValidationMessageFor(model => model.AdminUser.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.AdminUser.EmpID, new { @class = "form-control form-control-user", @placeholder = "EmpId", @required = "required", @type = "text" })
                                @Html.ValidationMessageFor(model => model.AdminUser.EmpID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.TextBoxFor(model => model.AdminUser.Email, new { @class = "form-control form-control-user", @placeholder = "Email", @required = "required", @type = "email" })
                                @Html.ValidationMessageFor(model => model.AdminUser.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.TextBoxFor(model => model.AdminUser.PhoneNumber, new { @class = "form-control form-control-user", @placeholder = "Phone Number", @required = "required", @type = "tel" })
                                @Html.ValidationMessageFor(model => model.AdminUser.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.PasswordFor(model => model.AdminUser.Password, new { @class = "form-control form-control-user", @placeholder = "Password", @required = "required",@minLength = "6",@maxLength ="15" })
                                @Html.ValidationMessageFor(model => model.AdminUser.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                @Html.PasswordFor(model => model.AdminUser.ConfirmPassword, new { @class = "form-control form-control-user", @placeholder = "Repeat Password", @required = "required" })
                                @Html.ValidationMessageFor(model => model.AdminUser.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Register Account
                        </button>
                    }

                    <hr>
                    <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" asp-controller="SPanel1325" asp-action="Login">Already have an account? Login!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
