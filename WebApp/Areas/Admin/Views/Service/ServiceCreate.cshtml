@model WebApp.Areas.Admin.Models.AdminViewModel;
@{
	ViewData["Title"] = "Service Create";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h5 class="PgTitle">Services:</h5>
<h5 class="alert-success">@ViewBag.Success</h5>
<h5 class="alert-danger">@ViewBag.Error</h5>
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body" id="HdrPView">
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body" id="DetPView">
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	document.addEventListener('DOMContentLoaded',function(){
		GetHdrPView();
	})
	 let fullDescEditor;
	function GetHdrPView(ID) {
		Swal.fire({
			position: "center",
			html: '<i class="fa fa-spinner fa-spin" style="font-size: 2em;margin-top: 0.8em"></i><br><br>',
			showConfirmButton: false,
			allowOutsideClick: false,
			allowEscapeKey: false,
		});
		$.ajax({
			url: '@Url.Action("GetServiceHdrPView", "Service")',
			type: 'GET',
			data: { ID: ID },
			success: function (html) {
				 $("#HdrPView").html("");
				 $("#HdrPView").html(html);
				 GetDetPView();
			},
			error: function (error) {
				console.log(error);
				if (error.status === 401) location.href = '/SPanel1325/Login';
				console.log("Error Get Service Hdr PView");
				Swal.close();
			}
		});
	}
	function GetDetPView() {
		var ServiceCatId = document.getElementById("ServiceCatId").value;
		Swal.fire({
			position: "center",
			html: '<i class="fa fa-spinner fa-spin" style="font-size: 2em;margin-top: 0.8em"></i><br><br>',
			showConfirmButton: false,
			allowOutsideClick: false,
			allowEscapeKey: false,
		});
		$.ajax({
			url: '@Url.Action("GetServiceDetPView", "Service")',
			type: 'GET',
			data: { ServiceCatId: ServiceCatId },
			success: function (html) {
				 $("#DetPView").html("");
				 $("#DetPView").html(html);
				 Swal.close();
			},
			error: function (error) {
				if (error.status === 401) location.href = '/SPanel1325/Login';
				console.log("Error Get Service det PView");
				Swal.close();
			}
		});
	}
	function ServiceSetUpdate() {
		var ImageFile = $("#Photo")[0].files[0];
		var formData = new FormData();
		if (ImageFile) {
			formData.append("ImageFile", ImageFile);
		}
		var otherData = $('#ServiceSetUpdateForm').serializeArray();
		$.each(otherData, function (index, item) {
			formData.append(item.name, item.value);
		});
		formData.set("Service.FullDesc", fullDescEditor.getData());
		var IsRequired = CheckRequiredField();
		if (IsRequired == "NO") {
			Swal.fire({
				position: "center",
				html: '<i class="fa fa-spinner fa-spin" style="font-size: 2em;margin-top: 0.8em"></i><br><br>',
				showConfirmButton: false,
				allowOutsideClick: false,
				allowEscapeKey: false,
			});
			$.ajax({
				url: '@Url.Action("ServiceSetUpdate", "Service")',
				type: 'POST',
				data: formData,
				contentType: false, // Important for FormData
				processData: false, // Important for FormData
				success: function (result) {
					Swal.close();
					if (result == 0) {
						Swal.fire({
							position: "center",
							icon: "error",
							title: "Service Not Inserted.",
							showConfirmButton: false,
							timer: 2000
						});
					}else if(result == -1){
						Swal.fire({
							position: "center",
							icon: "error",
							title: "This service already exists under this service category.",
							showConfirmButton: false,
							timer: 2000
						});
					}
					else {
						Swal.fire({
							position: "center",
							icon: "success",
							title: "Service Inserted!",
							showConfirmButton: false,
							timer: 2000
						});
						setTimeout(function () {
							GetDetPView();
							GetHdrPView();
						}, 2000)
					}
				},
				error: function (error) {
					if (error.status === 401) location.href = '/SPanel1325/Login';
					console.log(error);
					Swal.close();
				}
			});
		}
	}
	function CheckRequiredField() {
		var ServiceCatId = document.getElementById("ServiceCatId");
		var Name = document.getElementById("Name");
		var ShortDesc = document.getElementById("ShortDesc");
		if (ServiceCatId.value == "" || Name.value == ""||ShortDesc.value=="") {
			if (ServiceCatId.value == "") { ServiceCatId.style.border = "0.5px solid #ff00005c"; }
			if (Name.value == "") { Name.style.border = "0.5px solid #ff00005c"; }
			if (ShortDesc.value == "") { ShortDesc.style.border = "0.5px solid #ff00005c"; }

			Swal.fire({
				position: "center",
				icon: "error",
				title: "Please fill up all required fields.",
				showConfirmButton: false,
				timer: 2000
			});
			return "YES";
		} else {
			return "NO"
		}
	}
	function ServiceDelete(ID){
		$.ajax({
			url: '@Url.Action("ServiceDelete", "Service")',
			type: 'POST',
			data: {ID:ID},
			success: function (result) {
				Swal.close();
				if (result == 0) {
					Swal.fire({
						position: "center",
						icon: "error",
						title: "Service Not Deleted.",
						showConfirmButton: false,
						timer: 2000
					});
				}
				else {
					Swal.fire({
						position: "center",
						icon: "success",
						title: "Service Deleted!",
						showConfirmButton: false,
						timer: 2000
					});
					setTimeout(function () {
						GetDetPView();
						GetHdrPView();
					}, 2000)
				}
			},
			error: function (error) {
			if (error.status === 401) loServiceion.href = '/SPanel1325/Login';
				console.log(error);
				Swal.close();
			}
		});
	}
	function PhotoPreview() {
		const PhotoPreview = document.getElementById('PhotoPreview');
		const file = document.getElementById('Photo').files[0];
		if (file) {
			var maxFileSize = 512000; //in bytes
			if (file.size <= maxFileSize) {

				PhotoPreview.innerHTML = '';
				const reader = new FileReader();
				reader.onload = function (e) {
					const img = document.createElement('img');
					img.src = e.target.result;
					img.alt = 'Uploaded Image';
					img.style.maxWidth = '5rem';
					img.style.maxHeight = '6rem';
					img.style.objectFit = 'contain'
					PhotoPreview.appendChild(img);
				};
				reader.readAsDataURL(file);
			}
			else {
				Swal.fire({
					text: "The file size should be around 500KB.",
					icon: "error"
				});
				document.getElementById('Photo').value = "";
			}
		}
	}

</script>



