@model WebApp.Areas.Admin.Models.AdminViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using (Html.BeginForm("MessageSetUpdate", "Message", FormMethod.Post, new { id = "MessageSetUpdateForm", enctype = "multipart/form-data" }))
{
	@Html.HiddenFor(model => model.Message.ID)

	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-12">
			<div class="row">
				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Message.FromDate, "From:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Message.FromDate, new { htmlAttributes = new { @type="date",id = "FromDate", @class = "form-control", placeholder = "Enter From Date", required = "required" } })
							@Html.ValidationMessageFor(model => model.Message.FromDate, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Message.ToDate, "To:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Message.ToDate, new { htmlAttributes = new { @type = "date", id = "ToDate", @class = "form-control", placeholder = "Enter To Date", required = "required" } })
							@Html.ValidationMessageFor(model => model.Message.ToDate, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div></div>
				<!-- Name -->
				<div class="col-lg-4 col-md-4 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Message.Name, "Name:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Message.Name, new { htmlAttributes = new { id = "Name", @class = "form-control", placeholder = "Enter Name", required = "required",@readonly="readonly" } })
							@Html.ValidationMessageFor(model => model.Message.Name, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div class="col-lg-4 col-md-4 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Message.Email, "Email:", htmlAttributes: new { @class = "col-sm-3 col-4 col-form-label" })
						<div class="col-sm-9 col-8">
							@Html.EditorFor(model => model.Message.Email, new { htmlAttributes = new { id = "Email", @class = "form-control", placeholder = "Enter Email", required = "required",@readonly="readonly" } })
							@Html.ValidationMessageFor(model => model.Message.Email, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div class="col-lg-4 col-md-4 col-sm-6 col-12 mb-1">
					<div class="form-group row ml-2">
						<label class="form-check-label">
							@Html.CheckBoxFor(model => model.Message.IsActive, new { @class = "form-check-input" }) Is Active
						</label>
					</div>
				</div>
				<div class="col-lg-12 col-md-12 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Message.Subject, "Subject:", htmlAttributes: new { @class = "col-sm-2 col-2 col-form-label" })
						<div class="col-sm-10 col-10">
							@Html.EditorFor(model => model.Message.Subject, new { htmlAttributes = new { id = "Subject", @class = "form-control", placeholder = "Enter Subject...", required = "required" } })
							@Html.ValidationMessageFor(model => model.Message.Subject, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
				<div class="col-lg-12 col-md-12 col-sm-6 col-12 mb-1">
					<div class="form-group row">
						@Html.LabelFor(model => model.Message.Body, "Body:", htmlAttributes: new { @class = "col-sm-2 col-2 col-form-label" })
						<div class="col-sm-10 col-10">
							@Html.TextAreaFor(model => model.Message.Body, new { @id = "Body", @class = "form-control", placeholder = "Enter Message...", required = "required", rows = "4" })
							@Html.ValidationMessageFor(model => model.Message.Body, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>

				<div class="col-lg-12 col-md-12 col-sm-6 col-12 mb-1 form-check" style="text-align:right">
					<button type="button" class="btn btn-sm btn-primary btn-user" onclick="MessageSetUpdate()">
						Save
					</button>
					<a class="btn btn-sm btn-outline-primary" asp-controller="Message" asp-action="MessageCreate">Refresh</a>
				</div>
			</div>
		</div>


	</div>

}
<script type="text/javascript">
	document.getElementById("FromDate").onchange = ()=>{
			GetDetPView();
		}
		document.getElementById("ToDate").onchange = ()=>{
			GetDetPView();
		}
	document.getElementById("Name").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };
	document.getElementById("Email").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };
	document.getElementById("Subject").onchange = function () { this.style.border = "0.5px solid #dee2e6"; };
</script>
