@model WebApp.Areas.Admin.Models.AdminViewModel;

<div class="contentSticky">
	<div class="table-sticky Content_cScroll" style="height:48vh">
		<table class="table table-bordered table-striped table-hover">
			<thead>
				<tr class="sticky">
					<th>Image</th></>
					<th>Name</th>
					<th>Email</th>
					<th>EmpID</th>
					<th>Phone</th>
					<th>Role</th>
					<th>Is Active</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var adminUsers in Model.AdminUserList)
				{
					<tr>
						<td class="text-center">
							<img style="width:2rem;height:2rem;object-fit:cover" src="@( adminUsers != null && !string.IsNullOrEmpty(adminUsers.PhotoUrl)? Url.Content("~/" + adminUsers.PhotoUrl): Url.Content("~/Admin/img/AdminUsers/avator.png"))" alt="User Image" />
						</td>
						<td>@adminUsers.Name</td>
						<td>@adminUsers.Email</td>
						<td>@adminUsers.EmpID</td>
						<td>@adminUsers.PhoneNumber</td>
						<td>@adminUsers.Role</td>
						<td>@adminUsers.IsActive</td>
						<td class="text-center"><button class="btn btn-sm btn-primary" onclick="GetHdrPView(@adminUsers.ID)">View</button></td>
					</tr>
				}
			</tbody>
		</table>
</div>
</div>